{
  // Require .prettierrc
  "prettier.requireConfig": true,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.useTabs": false,

  // Tslint on save
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json"
  ]
}
